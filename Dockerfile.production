# Production Dockerfile (for later use)
# Build: docker build -f Dockerfile.production -t research-agent:latest .
# Run: docker-compose -f docker-compose.full.yml up

FROM python:3.11-slim

LABEL maintainer="Carsten <carsten@volkswagen.com>"
LABEL description="Trading Strategy Research Agent - Production Image"

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY scripts/ ./scripts/
COPY .env.example .env

# Create necessary directories
RUN mkdir -p /app/domains /app/reports /app/logs

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8000/api/v1/heartbeat')" || exit 1

# Expose port (if needed for API)
EXPOSE 8080

# Run application
CMD ["python", "-u", "scripts/researcher.py", "--server"]
